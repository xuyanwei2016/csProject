.live_details {
  height: 100vh;
  display: flex;
  flex-flow: column;
  overflow: hidden;
}
.live_autoBox {
  flex: 1;
  overflow:auto;
}
.live_bottom {
  height: 171rpx;
}
.live_btn {
  width: 100%;
  height: 103rpx;
}
.cover{
  width: 100%;
  height: 480rpx;
}
.cover_img{
  width: 100%;
  height: 480rpx;
}
.course_main{
  padding: 32rpx 25rpx 48rpx;
  border-bottom: solid 14rpx #F5F5F5;
}

/* 价格 */
.price_con{
  overflow: hidden;
  margin-top: 50rpx;
}
.course_price{
  color: #E40000;
  font-size: 18px;
  font-weight:500;
  float: left;
}
.course_lineprice{
  color: #999999;
  font-size: 14px;
  font-weight: normal;
  margin-left: 16rpx;
  text-decoration: line-through;
}
.course_title{
  border-bottom: solid 1px #E6EAF2;
  height: 96rpx;
  line-height: 96rpx;
  color: #232323;
}
.title{
  float: left;
  width: 50%;
  text-align: center;
  font-size: 16px;
  font-weight:500;
}
.intro{
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: solid 1px #E6EAF2;
  
}
.intro text{
  width: 144rpx;
  text-align: center;
  border-bottom: solid 4rpx #316AD8;
  margin-left: 54rpx;
  display: inline-block;
}
.detail_content{
  margin: 80rpx 30rpx;
}
/* 试听和购买按钮 */
.bottom_btn{
  height: 103rpx;
  line-height: 103rpx;
  width: 100%;
  font-weight:500;
  font-size: 15px;
  background: #316AD8;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.pay_icon{
  width: 43rpx;
  height: 31rpx;
  margin-right: 15rpx;
}
.wxBtn {
  border: none !important;
  background: none !important;
  padding-left: 0 !important;
  padding-right: 0 !important;
  width: 100%;
  height: 100%;
  font-size: 15px;
  line-height: 103rpx;
  display: flex;
  align-items: center;
  color: #fff;
  justify-content: center;
}