.series_box{
  border-top: solid 1px #EEEEEE;
}
.series_content{
  display: flex;
  border-bottom: solid 1px #EEEEEE;
  padding: 28rpx 0;
  margin: 0 30rpx;
}
.series_cover{
  width: 300rpx;
  margin-right: 24rpx;
  height: 200rpx;
}
.series_cover image{
  width: 300rpx;
  height: 200rpx;
}
.series_bottom{
  flex:1;
}
.series_name{
  min-height: 74rpx;
  color: #202021;
  font-weight:bold;
  line-height: 40rpx;
  font-size: 15px;
  white-space: normal;
  overflow: hidden;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  text-overflow:ellipsis;
  display: -webkit-box;
}
/* 价格 */
.series_price{
  font-size: 12px;
  margin-top: 20rpx;
}
.series_realprice{
  color: #FE2023;
  font-size: 14px;
  line-height:40rpx;
  margin-right: 15rpx;
  font-weight:500;
}
.series_lineprice{
  text-decoration: line-through;
  color: #9C9D9C;
}
/* 浏览量--更新节数 */
.series_main{
  font-size: 11px;
  color: #BDBEBD;
  margin-top: 30rpx;
  overflow: hidden;
}
.series_periods{
  float: left;
  letter-spacing: 1px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.series_browse{
  float: right;
  display: flex;
  align-items: center;
  justify-content: center;
}
.browse_icon{
  height: 20rpx;
  width: 20rpx;
  margin-right: 8rpx; 
}