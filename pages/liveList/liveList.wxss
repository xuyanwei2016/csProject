/* pages/course/course.wxss */
.other_course{
  display: flex;
  border-bottom: solid 1px #EEEEEE;
  padding: 28rpx 0;
  margin: 0 30rpx;
}
.other_cover{
  width: 300rpx;
  margin-right: 24rpx;
  position: relative;
}
/* 直播类型 */
.live_tips{
  position: absolute;
  right: 22rpx;
  bottom: 14rpx;
  color: #fff;
  background: #F46542;
  font-size: 10px;
  padding: 3rpx 16rpx;
  opacity:0.9;
  border-radius:4rpx;
}
.fir{
  background: #06B5A2;
}
.sec{
  background: #1B9FF4;
}
.other_cover image{
  width: 300rpx;
  height: 200rpx;
}
.other_bottom{
  flex:1;
}
.other_name{
  min-height: 88rpx;
  color: #202021;
  font-weight:bold;
  line-height: 44rpx;
  font-size: 15px;
}
.other_text{
  white-space: normal;
  overflow: hidden;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  text-overflow:ellipsis;
  display: -webkit-box;
}
.other_price,.other_times{
  font-size: 12px;
  color: #BBBBBB;
  margin-top: 26rpx;
}
.other_times{
  margin-top: 16rpx;
}
.other_realprice{
  color: #FE2023;
  font-size: 14px;
  line-height:40rpx;
  margin-right: 15rpx;
  font-weight:500;
}
.other_lineprice{
  text-decoration: line-through;
  color: #9C9D9C;
}