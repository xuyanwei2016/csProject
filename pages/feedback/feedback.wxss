/* pages/feedback/feedback.wxss */
#feedback_page,page{
  width: 100%;
  overflow: hidden;
  background: #F8F8F8;
}
#feedback_page .section{
  border: none;
  overflow: hidden;
  background: white;
  padding:30rpx 24rpx;
  margin-bottom: 21rpx;
  font-size: 15px;
}
#feedback_page .section textarea{
  height: 400rpx;
  width: 100%;
}
#feedback_page .phcolor{
  color: #AEAEAE;
}
/* image */
.post_image{
  padding: 48rpx 40rpx;
  background: #fff;
  overflow: hidden;
}
.post_image_title{
  color: #333333;
  font-weight:500;
  font-size: 15px;
  margin-bottom: 30rpx;
}
.post_img_box{
  height: 200rpx;
  width:  200rpx;
  float: left;
  border: dotted 1px #ebebeb;
  margin-right: 20rpx;
  position: relative;
}
.post_img_box:last-child{
  margin-right: 0;
}
.post_img{
  height: 200rpx;
  width:  200rpx;
  float: left;
}
.post_close{
  position: absolute;
  top: 0;
  right: 0;
  height: 26rpx;
  width: 26rpx;
}
.post_upload{
  height: 210rpx;
  width:  210rpx;
  float: left;
  border: dotted 1px #ebebeb;
  text-align: center;
  line-height: 210rpx;
  font-size: 100rpx;
  color: #C9C6C9;
  font-weight: bold;
  position: relative;
}
.post_upload::after{
  content: '';
  position: absolute;
  left: 50%;
  top: 50%;
  height: 50px;
  margin-left: -5px;
  margin-top: -25px;
  border-left: 5px solid;
}
.post_upload::before{
  content: '';
  position: absolute;
  left: 50%;
  top: 50%;
  width: 50px;
  margin-left: -25px;
  margin-top: -5px;
  border-top: 5px solid;
}
.post_btn{
  height: 80rpx;
  line-height: 80rpx;
  background:linear-gradient(90deg,rgba(45,179,249,1) 0%,rgba(76,123,244,1) 100%);
  border-radius:40rpx;
  text-align: center;
  color: #fff;
  margin: 0 10%;
  margin-top: 88rpx;
}
#feedback_page .submit{
  width:600rpx;
  height:80rpx;
  background:rgba(77,137,246,1);
  box-shadow:0px 2px 16px 0px rgba(42, 215, 106, 0.35);
  border-radius:40px;
  color: white;
  margin: 0 auto;
  margin-top: 128rpx;
  line-height: 80rpx;
  text-align: center;
}