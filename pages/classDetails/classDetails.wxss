.class_body{
  /* background: #F4F6FA; */
  background: #fff;
  position: relative;
  padding-bottom: 104rpx;
  min-height: 100vh;
}
/* 视频 */
.class_video{
  width: 100%;
  height: 400rpx;
  position: relative;
}
video{
  width: 100%;
  height: 400rpx;
}
.video_box{
  width: 100%;
  height: 400rpx;
  position: absolute;
  left: 0;
  top: 0;
  background: rgab(0,0,0,0.3);
}
/* 标题 */
.class_border{
  padding-bottom: 16rpx;
  background: #F4F6FA;
}
.class_topBox{
  background: #fff;
  padding: 40rpx 26rpx;
  overflow: hidden;
}
.class_topBox .title{
  color: #212020;
  font-size: 19px;
  font-weight:bold;
  line-height: 54rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.class_topBox .content{
  color: #BCC1CA;
  margin-top: 30rpx;
}
.class_topBox .resource{
  margin-top: 10rpx;
  width: 240rpx;
  float: left;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
/* .class_topBox .browser_box{
  float: left;
  margin-left: 40rpx;
  margin-top: 10rpx;
} */
.class_topBox .browser_box{
  float: right;
  margin-right: 24rpx;
}
.class_topBox .read_icon{
  width: 24rpx;
  height: 16rpx;
  margin-right: 10rpx;
}
.class_topBox .fav_box{
  float: right;
  margin-right: 24rpx;
  padding: 14rpx 22rpx;
  background: #E9F0FB;
  color: #666666;
  border-radius:26rpx;
  font-size: 13px;
}
.class_topBox .fav_icon{
  width: 25rpx;
  height: 22rpx;
  margin-right: 10rpx;
}

/* 简介 */
.class_introBox{
  background: #fff;
  padding: 40rpx 25rpx;
  position: relative
}
.intro_title{
  font-size:17px;
  color: #333333;
  font-weight:bold;
}
.intro_content{
  color: #818389;
  line-height: 45rpx;
  margin-top: 30rpx;
}
.open_intro{
  width: 60rpx;
  height: 40rpx;
  position: absolute;
  bottom: 20rpx;
  right: 30rpx;
  text-align: right;
}
.open_icon,.close_icon{
  width: 20rpx;
  height: 10rpx;
}
.close_icon {
  transform: rotate(180deg);
}
/* 评论 */
.class_review{
  background: #fff;
  padding: 40rpx 25rpx;
  padding-bottom: 0;
  overflow: hidden;
}
.intro_title{
  color: #333333;
  font-size:17px;
  font-weight:bold;
}
.review_input{
  width: 100%;
  border:1px solid rgba(231,236,239,1);
  border-radius:33px;
  margin-top: 40rpx;
  height: 66rpx;
  line-height: 66rpx;
  margin-bottom: 10rpx;
}
.review_input_text{
  color: #C8CAD2;
  padding-left: 29rpx;

}
.review_list{
  border-bottom: solid 1px #EEEEEE;
  padding: 30rpx 0;
}
.review_topBox{
  color: #212020;
  overflow: hidden;
}
.header{
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  float: left
}
.name{
  margin-left: 15rpx;
}
.start_box{
  float: right;
}
.start{
  width: 20rpx;
  height: 20rpx;
  margin-right: 8rpx;
}
.review_intro{
  color: #818389;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-top: 12rpx;
  font-weight:500;
  line-height:44rpx;
  margin-left: 70rpx;
}
.review_bottom{
  color: #C8CAD2;
  margin-top: 36rpx;
  margin-left: 70rpx;
}
.fav_content,.review_content{
  float: right;
}
.review_content{
  margin-right: 40rpx;
}
.review_icon,.fav_icon{
  width:24rpx;
  height:21rpx;
  margin-right: 10rpx;
}
.look_review{
  color: #C8CAD2;
  margin: 40rpx 0;
  text-align: center;
}
.review_nullBox{
  text-align: center;
}
.review_nullIcon{
  height: 252rpx;
  width: 282rpx;
  margin: 40rpx auto;

}
.review_nullText{
  color: #BDC2CB;
  font-weight: 500;
  margin-bottom: 40rpx;
}
.class_vip{
  position: fixed;
  bottom: 0;
  left: 0;
  height: 104rpx;
  width: 100%;
  line-height: 104rpx;
  background: #2A6AD7;
  color: #fff;
  font-weight:500;
  text-align: center;
  font-size: 15px;
}