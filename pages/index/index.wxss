/**index.wxss**/
.index {
  width: 100%;
  height: 100%;
  background: #fff;
  position: relative;
  overflow: hidden;
}
/* 搜索框 */
.search_box{
  width:702rpx;
  height:74rpx;
  line-height: 74rpx;
  background:rgba(247,247,247,1);
  border-radius:37rpx;
  margin: 0 auto;
  margin-bottom: 34rpx;
  font-size: 14px;
  color: #939393;
}
.search_box .search_image{
    width: 30rpx;
    height: 30rpx;
    float: left;
    margin: 22rpx 9rpx 0 34rpx;
}
.index_banner {
  width: 100%;
  height: 460rpx;
}
/*轮播图  */
.index_swiper {
  position: relative;
  width: 100%;
  height: 460rpx;
}
.index_swiper .swiper_img {
  width: 100%;
  height: 100% !important;
}
/*轮播图未选中指示点的样式  */
.index_swiper .wx-swiper-dot {
  height: 10rpx;
  width: 10rpx;
}
/*轮播图选中指示点的样式  */
.index_swiper .wx-swiper-dot-active {
  width: 20rpx;
  height: 10rpx;
}
/* nav */
.nav_box{
  overflow: hidden;
}
.nav_list{
  width: 25%;
  float: left;
  text-align: center;
  margin-top: 44rpx;
}
.nav_list .nav_img{
  width: 80rpx;
  height: 80rpx;
}
.nav_list .nav_text{
  color: #222222;
  font-size: 12px;
}

/* course_box */
.index_course{
  margin: 40rpx 30rpx 0;
}
.course_list{
  width: 100%;
  overflow: hidden;
  box-shadow:0px 3px 13px 0px rgba(153, 153, 153, 0.35);
  border-radius:6rpx;
  padding-bottom: 24rpx;
  margin-bottom: 30rpx;
}
.course_cover{
  width: 100%;
  height: 420rpx;
}
.course_bottom{
  padding: 0 24rpx;
}
.course_name{
  font-size:16px;
  font-weight:bold;
  color:rgba(34,34,34,1);
  line-height:44rpx;
  width: 100%;
  margin-top: 26rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}
.course_intro{
  font-size: 12px;
  font-weight: 500;
  color:rgba(135,139,148,1);
  line-height: 36rpx;
  margin-top: 15rpx;
  white-space: normal;
  overflow: hidden;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  text-overflow:ellipsis;
  display: -webkit-box;
}
.course_price{
  color: #CBCBCB;
  font-size: 13px;
  margin-top: 25rpx;
}
.course_realprice{
  color: #FA4749;
  font-size: 15px;
  font-weight:500;
  line-height:40rpx;
  margin-right: 15rpx;
}
.course_lineprice{
  text-decoration: line-through;
}
.course_browse{
  float: right;
  color: #878B94;
}
.browse_icon{
  height: 20rpx;
  width: 20rpx;
  margin-right: 7rpx; 
}

/* common header */
.common_title {
  overflow: hidden;
  line-height: 120rpx;
}
.common_left {
  float: left;
  color: #222222;
  font-size: 20px;
  font-weight: bold;
}
.common_right {
  float: right; 
  font-size: 14px;
  color: #606773;
}
.common_right image {
  width: 12rpx;
  height: 20rpx;
}

/* live_box */
.index_live{
  margin: 40rpx 30rpx 0;
}
.live_list{
  width: 100%;
  border-radius:6rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 3px 13px 0px rgba(153, 153, 153, 0.35);
  margin-bottom: 30rpx;
}
.live_cover_box{
  width: 100%;
  height: 300rpx;
  position: relative;
}
.live_tips{
  position: absolute;
  right: 22rpx;
  bottom: 14rpx;
  color: #fff;
  background: #F46542;
  font-size: 10px;
  padding: 3rpx 16rpx;
  opacity:0.9;
  border-radius:4rpx;
}
.fir{
  background: #06B5A2;
}
.sec{
  background: #1B9FF4;
}
.live_cover{
  width: 100%;
  height: 300rpx;
}
.live_bottom{
  padding: 0 24rpx;
}
.live_name{
  font-size:16px;
  font-weight:bold;
  color:rgba(34,34,34,1);
  line-height:44rpx;
  width: 100%;
  margin-top: 26rpx;
  white-space: normal;
  overflow: hidden;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  text-overflow:ellipsis;
  display: -webkit-box;
}
.live_author{
  color: #1873EF;
  font-size: 14px;
  padding: 30rpx 0;
  border-bottom: solid 1px #EEEEEE;
}
.live_intro{
  color: #878B94;
  font-size: 12px;
  height: 97rpx;
  line-height: 97rpx;
}
.live_btn{
  width:160rpx;
  height:60rpx;
  background:rgba(255,235,231,1);
  border-radius:30rpx;
  color: #FF6E02;
  font-size: 14px;
  font-weight:bold;
  line-height: 60rpx;
  float: right;
  text-align: center;
  margin-top: 18rpx;
}
/* common_scroll */
.common_scroll {
  width: 100%;
  white-space: nowrap;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

/*精选专题  */
.index_subject {
  padding: 10rpx 0 0 30rpx;
  background: #fff;
}
.subject_list { 
  overflow: hidden;
}
.subject_scroll_view {
  display: inline-block;
  width: 500rpx;
  margin-right: 30rpx;
  vertical-align: top;
}
.subject_scroll_view image {
  width: 500rpx;
  height: 280rpx;
  border-radius: 4rpx;
}
.subject_scroll_synopsis {
  margin-top: 10rpx;
}
.subject_synopsis_title {
  width: 500rpx;
  font-size: 16px;
  color: #202021;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  line-height:44rpx;
  font-weight: bold;
}
.subject_synopsis_con {
  width: 500rpx;
  color: #878B94;
  font-weight:500;
  font-size: 13px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  line-height:36rpx;
  margin-top: 6rpx;
}
/*实操实例  */
.index_example {
  padding: 0 24rpx;
  background: #fff;
  border-top: solid 16rpx #EDEEF0;
  margin-top: 60px;
}
.example_list_item {
  padding-bottom: 30rpx;
  margin-bottom: 40rpx;
  border-bottom: 1rpx solid #EEEEEE;
}
.example_list_item:last-child {
  margin-bottom: 0;
  border-bottom: none; 
}
.example_top{
  display: flex;
}
.example_left{
  flex: 1;
}
.example_image{
  width: 200rpx;
  margin-left: 48rpx;
}
.example_image image{
  width: 200rpx;
  height: 150rpx;
}
.example_title {
  width: 100%;
  font-size: 16px;
  color: #222222;
  font-weight: bold;
}
.example_synopsis {
  width: 100%;
  font-size: 28rpx;
  color: #878B94;
  line-height: 42rpx;
  margin-top: 27rpx;
  overflow: hidden;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  text-overflow:ellipsis;
  display: -webkit-box;
  margin-bottom: 20rpx;
}
.example_bottom{
  font-size: 12px;
  color: #BDC1CB;
}
.example_bottom .example_browse {
  float: right
}
.index_bottom {
  color: #D5D7E0;
  font-size: 12px;
  margin-bottom: 42rpx;
  text-align: center;
}

