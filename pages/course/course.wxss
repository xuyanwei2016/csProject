/* pages/course/course.wxss */
.course_page{
  border-top: solid 1px #1A6FEE;
}
.course_sort{
  width: 100%;
  background: url('http://www.zgsccbs.com/skz/program/label_bg.png');
  background-size: 100%;
  background-repeat: no-repeat;
  overflow: hidden;
  padding-bottom: 30rpx;
  height: 270rpx;
}
/* nav */
.course_nav{
  height: 210rpx;
  background: #fff;
  box-shadow:0px 3px 13px 0px rgba(153, 153, 153, 0.35);
  border-radius:10rpx;
  width: 92%;
  margin-left: 4%;
  margin-top: 45rpx;
}
.nav_list{
  width: 33%;
  float: left;
  text-align: center;
  margin-top: 38rpx;
}
.nav_list .nav_img{
  width: 92rpx;
  height: 92rpx;
}
.nav_list .nav_text{
  color: #222222;
  font-size: 12px;
  font-weight:500;
  margin-top: 10rpx;
}
/* 免费课程 */
.course_free{
  margin-bottom: 10rpx;
  padding: 0 30rpx;
  overflow: hidden
}
.free_list{
  margin-bottom: 48rpx;
  float: left;
  width: 48%;
}
.free_list:nth-child(2n+1){
  margin-right: 4%;
}
.course_img{
  width: 100%;
  height: 220rpx;
}
.course_name_box{
  height: 100rpx; 
}
.course_name{
  font-size:15px;
  font-weight:bold;
  color:rgba(32,32,33,1);
  line-height:44rpx;
  margin-top: 10rpx;
  margin-bottom: 24rpx;
  width: 100%;
  white-space: normal;
  overflow: hidden;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  text-overflow:ellipsis;
  display: -webkit-box;
}
.course_price{
  font-size: 12px;
  color: #0AB562;
  clear: both;
}
.course_lineprice{
  margin-left: 15rpx;
  text-decoration: line-through;
  color: #9C9D9C;
}
/* 精品小课 */
.excellent_box{
  border-top: solid 16rpx #EDEEF0; 
}
.other_course{
  display: flex;
  border-bottom: solid 1px #EEEEEE;
  padding: 28rpx 0;
  margin: 0 30rpx;
}
.other_cover{
  width: 300rpx;
  margin-right: 24rpx;
}
.other_cover image{
  width: 300rpx;
  height: 200rpx;
}
.other_bottom{
  flex:1;
}
.other_name{
  height: 155rpx;
  color: #202021;
  font-weight:bold;
  line-height: 44rpx;
  font-size: 15px;
}
.name_box{
  white-space: normal;
  overflow: hidden;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  text-overflow:ellipsis;
  display: -webkit-box;
}
.other_price{
  font-size: 12px;
}
.other_realprice{
  color: #FE2023;
  font-size: 14px;
  font-weight:500;
  line-height:40rpx;
  margin-right: 15rpx;
  
}
.other_lineprice{
  text-decoration: line-through;
  color: #9C9D9C;
}
.other_browse{
  float: right;
  color: #BDBEBD;
  margin-top: 5rpx;
}
.browse_icon{
  height: 20rpx;
  width: 20rpx;
  margin-right: 7rpx; 
}
/* 好课推荐 */
.recommend_box{
  border-top: solid 16rpx #EDEEF0; 
}
.recommend_course{
  display: flex;
  border-bottom: solid 1px #EEEEEE;
  padding: 28rpx 0;
  margin: 0 30rpx;
}
.recommend_cover{
  width: 300rpx;
  margin-right: 24rpx;
}
.recommend_cover image{
  width: 300rpx;
  height: 200rpx;
}
.recommend_bottom{
  flex:1;
  position: relative;
}
.recommend_name{
  color: #202021;
  font-weight:bold;
  line-height: 44rpx;
  font-size: 15px;
  white-space: normal;
  overflow: hidden;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  text-overflow:ellipsis;
  display: -webkit-box;
}
.recommend_price{
  font-size: 12px;
  position: absolute;
  top: 100rpx;
  left: 0;
}
.recommend_realprice{
  color: #FE2023;
  font-size: 14px;
  font-weight:500;
  line-height:40rpx;
  margin-right: 25rpx;
  
}
.recommend_lineprice{
  text-decoration: line-through;
  color: #9C9D9C;
}
.recommend_details{
  position: absolute;
  top: 174rpx;
  left: 0;
  font-size: 11px;
  width: 100%;
}
.recommend_chapter{
  float: left;
  color: #9C9D9C;
  display: flex;
  align-items: center;
  justify-content: center;
}
.recommend_browse{
  float: right;
  color: #BDBEBD;
  display: flex;
  align-items: center;
  justify-content: center;
}
.browse_icon{
  height: 20rpx;
  width: 20rpx;
  margin-right: 7rpx; 
}
/* 暂无推荐 */
.review_nullBox{
  text-align: center;
}
.review_nullIcon{
  height: 252rpx;
  width: 282rpx;
  margin: 40rpx 31%;
}
.review_nullText{
  color: #BDC2CB;
  font-weight: 500;
  margin-bottom: 40rpx;
}