/* 评论页面 */
.noscroll{
  height: 100vh;
  overflow: hidden;
}
.review_list{
  padding: 30rpx 0;
  margin: 0 30rpx;
  overflow: hidden;
  background: #fff;
}
.father_box{
  padding-bottom: 116rpx;
}
.list_box{
  border-bottom: solid 1px #EEEEEE;
  margin-left: 80rpx;
}
.review_topBox{
  color: #212020;
  overflow: hidden;
}
.header{
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  float: left
}
.name{
  margin-left: 15rpx;
}
.reply_text{
  color: #F48D0D;
  margin: 0 14rpx;
}
.start_box{
  float: right;
}
.start{
  width: 20rpx;
  height: 20rpx;
  margin-right: 8rpx;
}
.review_intro{
  color: #818389;
  margin-top: 12rpx;
  font-weight:500;
  line-height:44rpx;
  margin-left: 70rpx;
}
.review_bottom{
  color: #C8CAD2;
  margin-top: 36rpx;
  margin-left: 70rpx;
  font-size: 13px;
}
.fav_content,.review_content{
  float: right;
}
.fav_content{
  margin-left: 40rpx;
}
.review_icon,.fav_icon{
  width:24rpx;
  height:21rpx;
  margin-right: 10rpx;
}
.border{
  height: 16rpx;
  background: #F4F6FA;
  width: 100%;
}

/* 底部input */
.comments_box{
  position: fixed;
  bottom: 0;
  left: 0;
  height: 116rpx;
  background: #F7F8FA;
  width: 100%;
}
/* .placeholder{
  color: #C8CAD2;
} */
.comments_input{
  width: 90%;
  margin-left: 5%;
  background: #fff;
  height: 72rpx;
  line-height: 72rpx;
  border:1px solid rgba(231,236,239,1);
  border-radius:36rpx;
  margin-top: 22rpx;
  /* color: #333; */
  color: #C8CAD2;
  padding: 0 10rpx;
  font-size: 14px;
}

/* 弹窗 */
.toast_box{
  width: 100%;
  height: 100%;
  opacity: 1;
  position: fixed;
  top: 0px;
  left: 0px;

}
.toastbg{
  opacity: 0.2;
  background-color: black;
  position: absolute;
  width: 100%;
  min-height: 100vh;

}
.showToast {
  position: absolute;
  opacity: 1;
  width: 70%;
  margin-left: 15%;
  margin-top: 40%;
}
.toast_title{
  padding-left: 5%;
  background-color: #2196f3;
  color: white;
  padding-top: 2vh;
  padding-bottom: 2vh;
  border-top-right-radius: 16rpx;
  border-top-left-radius: 16rpx;
}
.toast_main{
  padding-top: 2vh;
  padding-bottom: 2vh;
  background-color: white;
}
textarea{
  width: 90%;
  margin-left: 5%;
}
.toast_button{
  display: flex;
}
.button1 {
  width: 50%;
}
 
.button2 {
  width: 50%;
}
 
.button1 button {
  width: 100%;
  background-color: white;
  color: #000;
  border-radius: 0px;
  border-bottom-left-radius: 16rpx;
}
 
.button2 button{
  width: 100%;
  background-color: white;
  color: #2196f3;
  border-radius: 0px;
  border-bottom-right-radius: 16rpx;
}
 
.picker {
  padding-top: 1vh;
  padding-bottom: 1vh;
}
/* 回复弹窗 */
.post_reply{
  height: 100vh;
  width: 100%;
  position: absolute;
  left: 0;
  top:0;
  background: rgba(0,0,0,0.5);
  z-index: 1000
}
.post_reply textarea{
  margin-left: 0;
}
.post_box{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
}
.post_box_icon{
  height: 40rpx;
  width:100%;
  margin-bottom: 25rpx;
}
.del_icon{
  margin-right:24rpx;
  height: 37rpx;
  width: 37rpx;
  float: right;
}
.post_reply textarea{
  width: 90%;
  height: 300rpx;
  padding: 5%;
  background: #fff;
  overflow: hidden;
}
.reply_box{
  border-top: solid 1px #E4E4E4; 
  border-bottom: solid 1px #E4E4E4; 
  padding: 17rpx 0;
  background: #fff;
  overflow: hidden;
}
.reply_btn{
  width: 104rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  background: #B0CCF9;
  color: #FDFDFD;
  font-size: 14px;
  font-weight: 500;
  float: right;
  margin-right: 24rpx;
}
